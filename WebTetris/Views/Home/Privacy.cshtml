@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="privacy-container">
    <header class="privacy-header">
        <a class="back-link" asp-area="" asp-controller="Home" asp-action="Index">
            ← Back to Game
        </a>
        <h1 class="page-title">Privacy Policy</h1>
        <p class="last-updated">Last updated: @DateTime.Now.ToString("dd.MM.yyyy")</p>
    </header>

    <main class="privacy-content">
        <div class="privacy-grid">
            <div class="privacy-card">
                <div class="card-icon">📋</div>
                <h3>General Information</h3>
                <p>This Privacy Policy describes how we collect, use, and protect your data when using WebTetris.</p>
                <p>We value your trust and strive to ensure maximum protection of your personal data.</p>
            </div>

            <div class="privacy-card">
                <div class="card-icon">📊</div>
                <h3>Data We Collect</h3>
                <ul>
                    <li>Username (nickname)</li>
                    <li>Your game results and records</li>
                    <li>Registration date and last login</li>
                    <li>Technical information (browser type, IP address)</li>
                </ul>
            </div>

            <div class="privacy-card">
                <div class="card-icon">🎯</div>
                <h3>How We Use Data</h3>
                <ul>
                    <li>Display results in the leaderboard</li>
                    <li>Improve gameplay</li>
                    <li>Ensure account security</li>
                    <li>Analyze usage statistics</li>
                </ul>
            </div>

            <div class="privacy-card">
                <div class="card-icon">🔒</div>
                <h3>Data Protection</h3>
                <ul>
                    <li>SSL encryption of all transmitted data</li>
                    <li>Secure servers with regular backups</li>
                    <li>Strict access control to data</li>
                </ul>
            </div>

            <div class="privacy-card">
                <div class="card-icon">🍪</div>
                <h3>Cookies</h3>
                <p>We use cookies for:</p>
                <ul>
                    <li>User authentication</li>
                    <li>Saving game settings</li>
                    <li>Service usage analysis</li>
                </ul>
            </div>

            <div class="privacy-card">
                <div class="card-icon">👤</div>
                <h3>Your Rights</h3>
                <ul>
                    <li>Request a copy of your data</li>
                    <li>Correct inaccurate data</li>
                    <li>Delete your account and data</li>
                    <li>Opt-out of data processing</li>
                </ul>
            </div>

            <div class="privacy-card full-width">
                <div class="card-icon">🔄</div>
                <h3>Policy Updates</h3>
                <p>We may update this policy as the service develops. We will notify you of significant changes through:</p>
                <ul>
                    <li>Notification on the website</li>
                    <li>Message in your account</li>
                    <li>Email (if provided)</li>
                </ul>
                <p>By continuing to use WebTetris after changes, you agree to the updated policy.</p>
            </div>

            <div class="privacy-card full-width important-note">
                <div class="card-icon">⚠️</div>
                <h3>Important</h3>
                <p>We do not collect payment card data, passport information, or other sensitive data.</p>
                <p>We do not share your data with third parties or use it for advertising.</p>
            </div>
        </div>
    </main>
</div>